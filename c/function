#include<stdio.h>
float square (float x);                                  // function declaration
int main()                                               // main function
{
float m,n;
printf("enter the value to find its square : ");
scanf("%f",&m);                                         // function call
n=square(m);
printf("\nsuare of %f is %f",m,n);
}

float square ( float x )                                // function definition
{
    float p ;
    p = x * x ;
    return ( p ) ;
}
